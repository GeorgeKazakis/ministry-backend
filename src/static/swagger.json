        "tags": ["Δεδομένα Απογραφής"],
        "parameters": [
          {
            "name": "dictionary",
            "in": "path",
            "required": true,
            "description": "Το όνομα (ενικός) του λεξικού από την απογραφή (https://t.ly/dWBz1)",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "apografi_id": { "type": "integer" },
                      "parentId": { "type": "integer" },
